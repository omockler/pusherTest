%html
	%head
		%link{href:"//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css", rel:"stylesheet"}
		%script{src: '//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js'}
		%script{src: 'http://ajax.aspnetcdn.com/ajax/knockout/knockout-2.2.1.js'}
		%script{src: 'https://d3dy5gmtp8yhk7.cloudfront.net/2.1/pusher.min.js'}
		%script{src: '/js/index.js'}
	%body
		%nav
			.navbar.navbar-fixed-top.navbar-inverse
				.navbar-inner
					.container
						%ul.nav.pull-right
							%li.dropdown
								%a#notifications-link.badgeable.dropdown-toggle{href:"#", data: {toggle:"dropdown"}}
									%span.badge.badge-important{data: {bind: "text: messageCount"}}
								%ul#notifications-list.dropdown-menu{role:"menu", aria: {labelledby:"dLabel"}, data: {bind: "foreach: messages"}}
									%li
										%span{data: {bind: "text: $data.message, style: {color: $data.read ? '' : 'green'}"}}
										%a{data: {bind: "click: $root.dismiss"}} Dismiss

		%input.user{type:'hidden', value: user_id}